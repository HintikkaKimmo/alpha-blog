<h2 align="center" Title <%= @article.title %></h2>
<div class="well col-xs-8 col-xs-2">
  <div class="listing">
    <% if @article.user %>
  <ul class="listing">
    <div class="row center">
      <div class="col-md-4 col-offset-4">
        <li>Created By:</li>
        <li><%= link_to gravatar_for(@article.user), users_path(@article.user) %></li>
        <li class="article-title"><%= link_to @article.user.username, users_path(@article.user) %></li>
        <li><small<%= pluralize(@article.user.articles.count, "article") if @article.user.articles %></li>
      </div>
    </div>
  </ul>
    <% end %>
  </div>
  <h4 class="center description"><strong>Description:</strong></h4>
  <h6><%= simple_format(@article.description) %></h6>
  <div class="article-actions">
    <%= link_to 'Edit this article', edit_article_path(@article), class: "btn btn-xs btn-primary" %>
    <%= link_to "Delete this article", articles_path(@article), method: :delete, data: { confirm: "Are you sure?"}, class: "btn btn-xs btn-danger" %>
    <%= link_to 'View all articles', articles_path, class: "btn btn-xs btn-success" %>
  </div>
</div>